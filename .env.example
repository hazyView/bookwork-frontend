# ===== ENVIRONMENT CONFIGURATION EXAMPLE =====
# Copy this file to .env.development, .env.production, etc.
# Never commit actual values to version control

# ===== APPLICATION SETTINGS =====
NODE_ENV=development
VITE_ENVIRONMENT=development

# ===== API CONFIGURATION =====
VITE_API_BASE=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# ===== AUTHENTICATION =====
VITE_JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
VITE_SESSION_TIMEOUT=1800000
VITE_AUTH_DEBUG=false

# ===== SECURITY SETTINGS =====
VITE_ENABLE_CSP=true
VITE_SECURITY_LEVEL=development
VITE_RATE_LIMIT_ENABLED=false

# ===== DATABASE (if used) =====
DATABASE_URL=postgresql://username:password@localhost:5432/bookwork
DATABASE_POOL_SIZE=10

# ===== EXTERNAL SERVICES =====
# Email service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# Cloud storage (if used)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET=your-s3-bucket

# ===== MONITORING & ANALYTICS =====
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=UA-XXXXXXXX-X

# ===== FEATURE FLAGS =====
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false

# ===== DEVELOPMENT ONLY =====
VITE_DEV_API_DELAY=1000
VITE_SHOW_DEV_TOOLS=true

# ===== PRODUCTION OVERRIDES =====
# These should be set in .env.production
# VITE_API_BASE=https://api.bookwork.com
# VITE_ENVIRONMENT=production
# VITE_SECURITY_LEVEL=strict
# VITE_RATE_LIMIT_ENABLED=true
# VITE_ENABLE_MOCK_DATA=false
# VITE_AUTH_DEBUG=false
